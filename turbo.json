{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", "dist-theme/**", "lib/**", "es/**", "esm/**", "types/**"],
        "cache": true,
        "env": ["NODE_ENV", "VITE_*", "ROLLUP_*"]
      },
      "lint": { "outputs": [] },
      "test": {
        "dependsOn": ["^build"],
        "outputs": ["coverage/**", "reports/**"]
      },
      "typecheck": { "outputs": ["tsconfig.tsbuildinfo"] }
    },
    "globalEnv": ["CI", "PNPM_HOME"]
  }